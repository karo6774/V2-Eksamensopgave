include ../components/button

mixin showcase-item(title, image, size, price)
  article.showcase-item
    div.showcase-item__container
      img.showcase-item__image(src=image, alt=title)
      div.showcase-item__content
        h3.showcase-item__title= title
        span #{numeral(size).format('0[.]0')} M²
        p
          | Pris #{numeral(price).format('0,0.00')} kr #[br]
          | Prisen er excl. montage

mixin showcase()
  section.showcase
    div.showcase__item-container
      +showcase-item(
      "Træhus",
      "img/5m2-traehus2.jpg",
      5,
      53200.00
      )
      +showcase-item(
      "Fritidshus",
      "img/28m2-fritidshus2.jpg",
      28,
      42000.00
      )
      +showcase-item(
      "Pavillion",
      "img/9m2-pavillion2.jpg",
      9.5,
      49900.00
      )
  section.show-more.arrow
    +button Se vores store udvalg af små træ huse
